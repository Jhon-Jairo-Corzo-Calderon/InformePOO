<Page x:Class="InformePOO.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InformePOO"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFFFF9D2"/>
                <GradientStop Color="#FFFFD958" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Ingresa tu nombre:" HorizontalAlignment="Left" Height="36" Margin="205,96,0,0" VerticalAlignment="Top" Width="147" FontSize="16" FontWeight="Normal" FontStyle="Italic"/>
        <TextBox Name="txtName" HorizontalAlignment="Left" Height="36" Margin="415,96,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" BorderThickness="1,1,1,1"/>
        <Button Content="Jugar" HorizontalAlignment="Center" Height="36" Margin="0,221,0,0" VerticalAlignment="Top" Width="104" FontSize="16" FontWeight="Bold" FontStyle="Italic" BorderThickness="1,1,1,1" Click="Button_Click" Grid.ColumnSpan="1" Grid.RowSpan="1" Padding="0,0,0,0" ScrollViewer.CanContentScroll="True" ClipToBounds="True"/>
    </Grid>
</Page>
